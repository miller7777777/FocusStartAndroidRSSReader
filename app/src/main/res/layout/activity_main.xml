<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Пока кнопка для добавления RSS здесь-->
    <!--Потом будет вынесена куда-нибудь в SnackBar или NavigationDriver-->
    <!--А поле ввода будет выводиться в новой активити-->

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter RSS URL:"
        />

    <!--здесь пока захардкодим-->

    <EditText
        android:id="@+id/et_rssURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="https://news.yandex.ru/internet.rss"
        />

    <Button
        android:id="@+id/btn_fetchRss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:text="Fetch Rss" />

    <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>